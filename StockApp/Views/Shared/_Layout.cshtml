<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stocks</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-brand">
                <span class="brand-icon">&#128200;</span>
                <span class="brand-text">Stocks</span>
            </div>
            <div class="navbar-links">
                <a asp-controller="Trade" asp-action="Index">Trade</a>
                <a asp-controller="Trade" asp-action="Orders">Orders</a>
            </div>
            <div class="navbar-right">
                <input type="text" placeholder="Search Stocks" class="search-input" />
                <button class="btn-settings">&#9881;</button>
                <button class="btn-login">Login</button>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
